<!-- boilerplate.ejs set up the general layout for this ejs file. -->
<% layout('layouts/boilerplate')%>
<!-- The form goes to localhost:3000/threads.  Forms take POST requests.  -->
<div class="row">
  <h1 class="text-center">New Thread</h1>
  <div class="col-6 offset-3">
    <form action="/threads" method="POST" novalidate class="validated-form">
      <div>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="thread[title]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="content">Content</label>
          <textarea
            class="form-control"
            rows="5"
            cols="50"
            id="content"
            name="thread[content]"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Create Thread</button>
        </div>
      </div>
    </form>
  </div>
</div>
