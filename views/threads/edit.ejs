<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Thread</h1>
  <div class="col-6 offset-3">
    <form
      action="/threads/<%=thread._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="thread[title]"
            value="<%=thread.title%>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="content">Content</label>
          <textarea
            class="form-control"
            rows="5"
            cols="50"
            id="content"
            name="thread[content]"
            required
          >
<%=thread.content%></textarea
          >
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Update Thread</button>
        </div>
      </div>
    </form>
  </div>
</div>
